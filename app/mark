def object = new JsonSlurper().parse()

//从网络下载json文件并解析
def getNetworkData(String url){
    //发送http请求
    def connection = new URL(url).openConnection()
    connection.connect()
    def response = connection.content.text
    return new JsonSlurper().parseText(response)
}

